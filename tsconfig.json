{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "*/**/*.ts",
    "*/lang/locales/*.json",
  ],
  "exclude": [
    "*/**/*_test.ts",
    "../coverage/",
    "../jest.config.ts",
    "../build/",
  ]
}